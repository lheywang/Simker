# Configure default options
set XSCHEM_LIBRARY_PATH {}
append XSCHEM_LIBRARY_PATH :${XSCHEM_SHAREDIR}/xschem_library
append XSCHEM_LIBRARY_PATH :[pwd]

# Set GUI options
set local_netlist_dir 1
set netlist_show 1
